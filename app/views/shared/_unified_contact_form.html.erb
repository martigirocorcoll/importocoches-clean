<div class="unified-contact-form">
  <div class="form-header">
    <div class="form-icon">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
        <polyline points="22,6 12,13 2,6"/>
      </svg>
    </div>
    <h3 class="form-title">Contacta con nosotros</h3>
    <p class="form-subtitle">Te responderemos en menos de 24 horas</p>
  </div>

  <%= simple_form_for(@contact || Contact.new, 
                      html: { 
                        class: "modern-contact-form", 
                        data: { 
                          controller: "form-tracking",
                          form_type: local_assigns[:form_type] || "lead",
                          form_source: local_assigns[:source] || "unknown"
                        } 
                      }) do |f| %>
    
    <!-- Desktop grid layout -->
    <div class="desktop-form-grid">
      <div class="input-group">
        <%= f.input :name, 
                    label: false, 
                    required: true,
                    placeholder: t('nombre') + " *",
                    input_html: { 
                      class: "form-input",
                      value: (user_signed_in? && current_user.fname.present?) ? current_user.fname : nil,
                      style: "background-image: url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"18\" height=\"18\" viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"%230066FF\" stroke-width=\"2\"><path d=\"M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2\"/><circle cx=\"12\" cy=\"7\" r=\"4\"/></svg>'); background-repeat: no-repeat; background-position: 20px center;"
                    },
                    wrapper_html: { class: "simple-input-wrapper" } %>
      </div>
      
      <div class="input-group">
        <%= f.input :phone, 
                    label: false, 
                    required: true,
                    placeholder: t('telefono') + " *",
                    input_html: { 
                      class: "form-input",
                      value: (user_signed_in? && current_user.telephone.present?) ? current_user.telephone : nil,
                      style: "background-image: url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"18\" height=\"18\" viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"%230066FF\" stroke-width=\"2\"><path d=\"M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z\"/></svg>'); background-repeat: no-repeat; background-position: 20px center;"
                    },
                    wrapper_html: { class: "simple-input-wrapper" } %>
      </div>
      
      <div class="input-group full-width-input">
        <%= f.input :email, 
                    label: false,
                    required: true,
                    placeholder: "Email *",
                    input_html: { 
                      class: "form-input",
                      value: (user_signed_in? && current_user.email.present?) ? current_user.email : nil,
                      style: "background-image: url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"18\" height=\"18\" viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"%230066FF\" stroke-width=\"2\"><path d=\"M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z\"/><polyline points=\"22,6 12,13 2,6\"/></svg>'); background-repeat: no-repeat; background-position: 20px center;"
                    },
                    wrapper_html: { class: "simple-input-wrapper" } %>
      </div>
      
      <div class="input-group full-width-input">
        <%= f.input :comment, 
                    label: false, 
                    placeholder: local_assigns[:placeholder] || t('indicanoscoche'),
                    input_html: { 
                      class: "form-textarea",
                      rows: 4,
                      style: "background-image: url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"18\" height=\"18\" viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"%230066FF\" stroke-width=\"2\"><path d=\"M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z\"/><polyline points=\"14,2 14,8 20,8\"/><line x1=\"16\" y1=\"13\" x2=\"8\" y2=\"13\"/><line x1=\"16\" y1=\"17\" x2=\"8\" y2=\"17\"/><polyline points=\"10,9 9,9 8,9\"/></svg>'); background-repeat: no-repeat; background-position: 20px 22px;"
                    },
                    wrapper_html: { class: "simple-input-wrapper" } %>
      </div>
    </div>
    
    <!-- Hidden fields for tracking -->
    <%= f.input :mobile_link, as: :hidden, input_html: { value: params[:mobile_link] } %>
    <%= f.input :price, as: :hidden, input_html: { value: params[:price] } %>
    <%= f.input :source, as: :hidden, input_html: { value: local_assigns[:source] || "web" } %>
    <%= f.input :page_url, as: :hidden, input_html: { value: request.path } %>
    
    <!-- Anti-spam protection (invisible) -->
    <%= f.invisible_captcha :subtitle %>
    
    <button type="submit" class="submit-button" data-form-source="<%= local_assigns[:source] || 'unknown' %>" data-form-type="<%= local_assigns[:form_type] || 'lead' %>">
      <div class="button-content">
        <svg class="button-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="22" y1="2" x2="11" y2="13"/>
          <polygon points="22,2 15,22 11,13 2,9 22,2"/>
        </svg>
        <span class="button-text"><%= local_assigns[:submit_text] || t('enviar') %></span>
      </div>
      <div class="button-loading" style="display: none;">
        <div class="spinner">
          <div class="bounce1"></div>
          <div class="bounce2"></div>
          <div class="bounce3"></div>
        </div>
        <span>Enviando...</span>
      </div>
    </button>
    
  <% end %>
</div>

<style>
.unified-contact-form {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 16px;
  padding: 0;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(0, 102, 255, 0.1);
  overflow: hidden;
  max-width: 500px;
  margin: 0 auto;
  width: 100%;
}

/* Desktop improvements */
@media (min-width: 768px) {
  .unified-contact-form {
    max-width: 600px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
  }
}

@media (min-width: 1024px) {
  .unified-contact-form {
    max-width: 700px;
  }
  
  .modern-contact-form {
    padding: 32px 40px 32px;
  }
  
  .form-header {
    padding: 32px 40px;
  }
  
  .form-title {
    font-size: 28px;
  }
  
  .form-subtitle {
    font-size: 16px;
  }
  
  /* Two-column layout for desktop */
  .desktop-form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
  }
  
  .desktop-form-grid .input-group {
    margin-bottom: 0;
  }
  
  .full-width-input {
    grid-column: 1 / -1;
  }
  
  .form-input, .form-textarea {
    font-size: 16px;
    padding: 16px 18px 16px 52px;
    min-height: 56px;
  }
  
  .form-textarea {
    min-height: 120px;
    padding: 18px 18px 18px 52px;
  }
  
  .submit-button {
    padding: 18px 32px;
    font-size: 17px;
    border-radius: 10px;
    margin-top: 8px;
  }
}

.form-header {
  background: linear-gradient(135deg, #0066FF 0%, #0052CC 100%);
  color: white;
  padding: 20px;
  text-align: center;
  position: relative;
}

.form-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
}

.form-icon {
  background: rgba(255, 255, 255, 0.2);
  width: 48px;
  height: 48px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16px;
  position: relative;
  z-index: 1;
}

.form-title {
  margin: 0 0 8px 0;
  font-size: 24px;
  font-weight: 600;
  position: relative;
  z-index: 1;
}

.form-subtitle {
  margin: 0;
  opacity: 0.9;
  font-size: 14px;
  position: relative;
  z-index: 1;
}

.modern-contact-form {
  padding: 24px 20px 20px;
}

.input-group {
  position: relative;
  margin-bottom: 12px;
}

.simple-input-wrapper {
  width: 100%;
}

.form-input {
  width: 100%;
  box-sizing: border-box;
  padding: 14px 16px 14px 50px;
  border: 2px solid #e9ecef;
  border-radius: 8px;
  font-size: 16px;
  transition: all 0.3s ease;
  background: white;
  font-family: inherit;
  display: block;
  line-height: 1.4;
  min-height: 52px;
}

.form-textarea {
  width: 100%;
  box-sizing: border-box;
  padding: 14px 16px 14px 50px;
  border: 2px solid #e9ecef;
  border-radius: 8px;
  font-size: 16px;
  transition: all 0.3s ease;
  background: white;
  font-family: inherit;
  display: block;
  line-height: 1.5;
  resize: vertical;
  min-height: 100px;
}

.simple-input-wrapper .form-textarea {
  width: 100% !important;
}

.full-width-input,
.full-width-input .simple-input-wrapper,
.full-width-input .simple-input-wrapper > div,
.full-width-input .form-group,
.full-width-input .input-group-addon,
.full-width-input textarea,
.full-width-input .form-textarea {
  width: 100% !important;
  box-sizing: border-box;
}

.form-input:focus,
.form-textarea:focus {
  outline: none;
  border-color: #0066FF;
  box-shadow: 0 0 0 3px rgba(0, 102, 255, 0.1);
}

.form-input:hover,
.form-textarea:hover {
  border-color: #0066FF;
}


.submit-button {
  width: 100%;
  background: linear-gradient(135deg, #0066FF 0%, #0052CC 100%);
  color: white;
  border: none;
  padding: 16px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  margin-bottom: 8px;
}

.submit-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 102, 255, 0.3);
}

.submit-button:active {
  transform: translateY(0);
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.button-icon {
  transition: transform 0.3s ease;
}

.submit-button:hover .button-icon {
  transform: translateX(2px);
}

.button-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.spinner {
  display: flex;
  gap: 2px;
}

.spinner > div {
  width: 4px;
  height: 4px;
  background-color: white;
  border-radius: 50%;
  animation: sk-bouncedelay 1.4s infinite ease-in-out both;
}

.spinner .bounce1 { animation-delay: -0.32s; }
.spinner .bounce2 { animation-delay: -0.16s; }

@keyframes sk-bouncedelay {
  0%, 80%, 100% { 
    transform: scale(0);
  } 40% { 
    transform: scale(1.0);
  }
}


/* Error styles */
.unified-contact-form .help-block {
  color: #dc3545;
  font-size: 12px;
  margin-top: 4px;
}

.unified-contact-form .has-error .form-input,
.unified-contact-form .has-error .form-textarea {
  border-color: #dc3545;
}

/* Success styles */
.unified-contact-form .has-success .form-input,
.unified-contact-form .has-success .form-textarea {
  border-color: #28a745;
}

/* Mobile responsive */
@media (max-width: 1023px) {
  .desktop-form-grid {
    display: block; /* Single column on mobile/tablet */
  }
  
  .desktop-form-grid .input-group {
    margin-bottom: 12px;
  }
}

@media (max-width: 768px) {
  .unified-contact-form {
    margin: 0 10px;
    max-width: none;
  }
  
  .form-header {
    padding: 20px;
  }
  
  .form-title {
    font-size: 20px;
  }
  
  .modern-contact-form {
    padding: 24px 20px 20px;
  }
  
  .form-input, 
  .form-textarea {
    font-size: 16px; /* Prevents zoom on iOS */
  }
}

/* Animation for form load */
.unified-contact-form {
  animation: formSlideIn 0.5s ease-out;
}

@keyframes formSlideIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.querySelector('.modern-contact-form');
  const submitButton = document.querySelector('.submit-button');
  const buttonContent = document.querySelector('.button-content');
  const buttonLoading = document.querySelector('.button-loading');
  
  if (form && submitButton) {
    form.addEventListener('submit', function(e) {
      // Show loading state
      buttonContent.style.display = 'none';
      buttonLoading.style.display = 'flex';
      submitButton.disabled = true;
      
      // Add pulse effect to form
      document.querySelector('.unified-contact-form').style.transform = 'scale(1.02)';
      setTimeout(() => {
        document.querySelector('.unified-contact-form').style.transform = 'scale(1)';
      }, 200);
    });
    
    // Add focus effects to inputs
    const inputs = form.querySelectorAll('.form-input, .form-textarea');
    inputs.forEach(input => {
      input.addEventListener('focus', function() {
        this.closest('.input-group').style.transform = 'translateY(-2px)';
      });
      
      input.addEventListener('blur', function() {
        this.closest('.input-group').style.transform = 'translateY(0)';
      });
    });
  }
});
</script>