<% content_for :for_head do %>
  <title> <%= t('head.importacio') %> <%= @brand_config[:display_name] %> <%= @model_config[:display_name] %> <%= t('head.importocotxe') %></title>
  <meta name='description' content="Encuentra los mejores precios en la importación de coches <%= @brand_config[:display_name] %> <%= @model_config[:display_name] %> a Andorra con Importocotxe. ¡Contáctanos hoy mismo!)">
<% end %>

<div style="background-color: white; margin-left:15px;">
  <%= link_to t('bread.inicio'), root_path, style:"text-decoration: none;" %>
  <%= link_to t('bread.mmarca'), marca_path, style:"text-decoration: none;" %>
  <%= link_to "> #{@brand_config[:display_name]}", url_for(controller: 'pages', action: 'show_brand', brand_slug: @brand_config[:slug]), style:"text-decoration: none;" %>
  > <%= @model_config[:display_name] %>
</div>

<div class="container">
  <h1 style = "text-align:center; color:black;"> <%= t('model.concreto', marca: @brand_config[:display_name], model: @model_config[:display_name]) %></h1>
  <h5 style = "text-align:center; color:gray; margin-bottom: 30px;"><%= t('h5totinclos') %> </h5>
  
  <%= render "shared/cache_indicator" %>
  
  <div class="flex">
    <%= render "pages/#{@brand_config[:slug].split('-').first}/contactmodal" %>
    <div class="ads" style="width: 100%;">
      <hr>
      <div class="listing-top">
      </div>
      <%= render "pages/#{@brand_config[:slug].split('-').first}/listingmodel" %>
    </div>
  </div>

  <div class="seocontainer">
    <% if I18n.exists?("#{@brand_config[:slug].split('-').first}_#{@model_config[:slug].gsub('-', '_')}.title") %>
      <h2><%= t("#{@brand_config[:slug].split('-').first}_#{@model_config[:slug].gsub('-', '_')}.title") %></h2>
      <p><%= t("#{@brand_config[:slug].split('-').first}_#{@model_config[:slug].gsub('-', '_')}.description") %></p>

      <% if I18n.exists?("#{@brand_config[:slug].split('-').first}_#{@model_config[:slug].gsub('-', '_')}.sections") %>
        <% t("#{@brand_config[:slug].split('-').first}_#{@model_config[:slug].gsub('-', '_')}.sections").each do |section| %>
          <h3><%= section[:heading] %></h3>
          <p><%= section[:content] %></p>
        <% end %>
      <% end %>

      <br>
      <% if I18n.exists?("#{@brand_config[:slug].split('-').first}_#{@model_config[:slug].gsub('-', '_')}.conclusion") %>
        <p><%= t("#{@brand_config[:slug].split('-').first}_#{@model_config[:slug].gsub('-', '_')}.conclusion") %></p>
      <% end %>

      <% if I18n.exists?("#{@brand_config[:slug].split('-').first}_#{@model_config[:slug].gsub('-', '_')}.faqs") %>
        <ul>
          <% t("#{@brand_config[:slug].split('-').first}_#{@model_config[:slug].gsub('-', '_')}.faqs").each do |faq| %>
            <li><%= faq[:question] %></li>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>