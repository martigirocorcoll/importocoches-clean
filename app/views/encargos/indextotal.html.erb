<% content_for :for_head do %>
  <meta name='robots' content='noindex'>
<% end %>
<div style="padding-right: 10px;">
  <%= link_to ' +', new_encargo_path, style: "float: right; text-decoration: none; font-size: 30px;" %>
</div>
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">
    <%= link_to "IVA's", encargos_path %>
  </button></li>
</ul>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fpago coche</th>
      <th>Frecogida</th>
      <th>Fentrada and</th>
      <th>Fcobro iva</th>
      <th>Contacto</th>
      <th>Cantidad iva</th>
      <th>Direccion recog</th>
      <th>Comentario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @encargos.each do |encargo| %>
      <tr>
        <td><%= encargo.nombre %></td>
        <td><%= encargo.fpago_coche %></td>
        <td><%= encargo.frecogida %></td>
        <td><%= encargo.fentrada_and %></td>
        <td><%= encargo.fcobro_iva %></td>
        <td><%= encargo.contacto %></td>
        <td><%= encargo.cantidad_iva %></td>
        <td><%= encargo.direccion_recog %></td>
        <td><%= encargo.comentario %></td>
        <td><%= link_to 'Show', encargo %></td>
        <td><%= link_to 'Edit', edit_encargo_path(encargo) %></td>
        <td><%= link_to 'Destroy', encargo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
