  <div>
    <h2><%= t('audi_a1.title') %></h2>
    <p><%= t('audi_a1.description') %></p>

    <h3><%= t('audi_a1.fiscal_benefits.title') %></h3>
    <p><%= t('audi_a1.fiscal_benefits.content') %></p>

