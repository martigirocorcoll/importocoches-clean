<div class="gti-modern">
  <div class="gti-container">
    
    <!-- Section Header -->
    <div class="gti-header">
      <div class="gti-badge">GTI</div>
      <h2 class="gti-main-title"><%= t('newhome.gti') %></h2>
      <p class="gti-description"><%= t('newhome.gtides') %></p>
    </div>

    <!-- GTI Services Grid -->
    <div class="gti-services-grid">
      
      <!-- Service 1: Garantía de Importación -->
      <div class="gti-service-card">
        <div class="service-video-container">
          <div class="video-card"
               data-controller="youtube"
               data-youtube-id-value="<%= t('video.garantia') %>">
            <div class="video-preview"
                 style="background-image: url('https://i.ytimg.com/vi/<%= t('video.garantia') %>/hqdefault.jpg');">
              <div class="video-overlay">
                <i class="fas fa-play"></i>
                <span><%= t('video_overlays.see_video') %></span>
              </div>
            </div>
          </div>
        </div>
        <div class="service-content">
          <h3 class="service-title"><%= t('newhome.gti1') %></h3>
          <p class="service-description"><%= t('newhome.gti1des') %></p>
        </div>
      </div>

      <!-- Service 2: Búsqueda y Entrega -->
      <div class="gti-service-card">
        <div class="service-video-container">
          <div class="video-card"
               data-controller="youtube"
               data-youtube-id-value="<%= t('video.entrega') %>">
            <div class="video-preview"
                 style="background-image: url('https://i.ytimg.com/vi/<%= t('video.entrega') %>/hqdefault.jpg');">
              <div class="video-overlay">
                <i class="fas fa-play"></i>
                <span><%= t('video_overlays.see_video') %></span>
              </div>
            </div>
          </div>
        </div>
        <div class="service-content">
          <h3 class="service-title"><%= t('newhome.gti2') %></h3>
          <p class="service-description"><%= t('newhome.gti2des') %></p>
        </div>
      </div>

      <!-- Service 3: Garantía Mecánica -->
      <div class="gti-service-card">
        <div class="service-video-container">
          <div class="video-card"
               data-controller="youtube"
               data-youtube-id-value="<%= t('video.mecanica') %>">
            <div class="video-preview"
                 style="background-image: url('https://i.ytimg.com/vi/<%= t('video.mecanica') %>/hqdefault.jpg');">
              <div class="video-overlay">
                <i class="fas fa-play"></i>
                <span><%= t('video_overlays.see_video') %></span>
              </div>
            </div>
          </div>
        </div>
        <div class="service-content">
          <h3 class="service-title"><%= t('newhome.gti3') %></h3>
          <p class="service-description"><%= t('newhome.gti3des') %></p>
        </div>
      </div>

    </div>

    <!-- Final CTA Section -->
    <div class="gti-footer">
      <h2 class="gti-final-title"><%= t('newhome.gtifin') %></h2>
      <%= link_to root_path, class: "gti-cta-button" do %>
        <%= t('pages.home.encuentra') %>
        <i class="fas fa-arrow-right"></i>
      <% end %>
    </div>

  </div>
</div>