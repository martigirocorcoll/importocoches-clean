<!-- Transparency Section -->
<section class="transparency-section">
  <div class="container">
    <h2 class="section-title" style="color: #2D3748;">Sin sorpresas, sin letra pequeña</h2>
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="pricing-card">
          <i class="bi bi-car-front pricing-icon"></i>
          <div>
            <h5><strong>Coche</strong></h5>
            <p class="mb-0">Lo pagas directo al concesionario alemán. Transparencia total.</p>
          </div>
        </div>

        <div class="pricing-card">
          <i class="bi bi-gear pricing-icon"></i>
          <div>
            <h5><strong>Nuestra gestión</strong></h5>
            <p class="mb-0">Solo cuando hay venta (50% inicio + 50% entrega). Incluye: transporte + homologación + gestión completa.</p>
          </div>
        </div>

        <div class="pricing-card">
          <i class="bi bi-file-text pricing-icon"></i>
          <div>
            <h5><strong>Gestoría matrícula</strong></h5>
            <p class="mb-0">Factura separada y transparente. Sin sorpresas.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- IMAGEN REAL: Facturas y documentos transparentes -->
    <div class="row mt-5">
      <div class="col-lg-8 mx-auto text-center">
        <img src="https://res.cloudinary.com/dd7x7bqya/image/upload/v1685013144/placeholder-image-1_lihcz8.jpg"
             alt="Ejemplo de facturas transparentes de importación"
             class="img-fluid"
             style="border-radius: 12px; box-shadow: 0 8px 25px rgba(0,0,0,0.1);">
        <p class="mt-3" style="color: #4A5568; font-style: italic;">Ejemplo real de la facturación transparente que recibes</p>
      </div>
    </div>

    <!-- CTA después de transparencia -->
    <div class="text-center mt-4">
      <h4 style="color: #8B1538; margin-bottom: 1rem;">¿Te gusta la transparencia total?</h4>
      <a href="<%= whatsapp_spain_url('Hola, me interesa vuestra transparencia en precios. ¿Podéis explicarme los costes de mi coche?') %>"
         target="_blank"
         class="cta-primary">
        <i class="bi bi-whatsapp"></i>
        Quiero conocer mis costes exactos
      </a>
    </div>
  </div>
</section>