<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-8">
        <div class="hero-content">
          <div class="badge-credibility">
            <i class="bi bi-shield-check me-1"></i> 7 años de experiencia · +300 coches entregados en España · <i class="bi bi-star-fill text-warning"></i> 4,9 valorados por nuestros clientes
          </div>
          <h1 class="hero-title">
            <i class="bi bi-car-front-fill"></i> Importación de coches de Alemania a España, fácil y sin riesgos
          </h1>
          <p class="hero-subtitle">
            Accede al mayor mercado europeo y elige entre miles de BMW, Audi, Mercedes o Porsche.<br>
            Nosotros nos encargamos de todo: comprobación, transporte, trámites y entrega con garantía oficial.
          </p>
          <a href="<%= whatsapp_spain_url('Hola, quiero que me busquéis mi coche en Alemania') %>"
             target="_blank"
             class="cta-primary">
            <i class="bi bi-check-circle-fill me-2"></i> Quiero que me busquéis mi coche en Alemania
          </a>
          <div style="margin-top: 1rem; font-size: 0.95rem; opacity: 0.9;">
            <i class="bi bi-clock-fill me-1"></i> Respuesta en menos de 24h · Servicio gratuito y sin compromiso
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <!-- IMAGEN REAL: Coche premium recién entregado con matrícula española -->
        <img src="https://res.cloudinary.com/dd7x7bqya/image/upload/v1755615296/b9bfe1ed-6778-4ef1-a306-078786a56186_qiuvjm.jpg"
             alt="BMW con matrícula española recién importado"
             class="img-fluid"
             style="border-radius: 16px; box-shadow: 0 20px 40px rgba(0,0,0,0.3);">

        <!-- CTA adicional debajo de imagen hero -->
        <div class="text-center mt-3">
          <a href="<%= whatsapp_spain_url('Hola, quiero ver ejemplos de coches que habéis importado recientemente') %>"
             target="_blank"
             style="color: white; text-decoration: none; font-size: 0.9rem; opacity: 0.9;">
            <i class="bi bi-images"></i> Ver coches importados recientemente
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
