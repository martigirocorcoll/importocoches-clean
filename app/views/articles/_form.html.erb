
<%= form_with(model: @article, local: true) do |form| %>
	<div>
		<%= form.label :titulo %>
		<%= form.text_field :titulo %>
	</div>

  <div>
		<%= form.label :description %>
		<%= form.text_field :description %>
	</div>

  <div>
		<%= form.label :locale %>
		<%= form.text_field :locale %>
	</div>

  <div>
		<%= form.label :image %>
		<%= form.text_field :image %>
	</div>

	<div>
		<%= form.label :content %>
		<%= form.rich_text_area :content %>
	</div>


	<div>
		<%= form.submit %>
	</div>
<% end %>
