    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-3">
          <h6>Total Modelos</h6>
          <h3><%= @cache_summary[:total_models] %></h3>
        </div>
        <div class="col-md-3">
          <h6>Modelos Cacheados</h6>
          <h3 class="text-success"><%= @cache_summary[:cached_models] %></h3>
        </div>
        <div class="col-md-3">
          <h6>Cobertura</h6>
          <h3><%= @cache_summary[:cache_coverage] %>%</h3>
        </div>
        <div class="col-md-3">
          <h6>Total Anuncios</h6>
          <h3><%= @cache_summary[:total_ads] %></h3>
        </div>
      </div>
