  overflow: hidden;
}

.cta-btn-whatsapp {
  background: #25D366;
  color: white;
  border: none;
}

.cta-btn-whatsapp:hover {
  background: #22c55e;
  transform: translateY(-2px);
  box-shadow: 0 10px 30px rgba(37, 211, 102, 0.3);
}

.cta-btn-contact {
  background: #0066FF;
  color: white;
  border: none;
