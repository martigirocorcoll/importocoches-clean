}


@media (max-width: 768px) {
  .api-limit-container {
    padding: 10px;
  }
  
  .api-limit-card {
    margin: 10px 0;
  }
  
  .api-limit-header {
    padding: 40px 20px 30px;
  }
  
  .api-limit-title {
    font-size: 28px;
  }
  
  .stats-display {
    flex-direction: column;
    gap: 20px;
  }
  
  .stat-divider {
    transform: rotate(90deg);
  }
  
  .benefits-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .api-limit-cta {
    padding: 40px 20px;
  }
  
  .cta-title {
    font-size: 24px;
  }
  
}
</style>