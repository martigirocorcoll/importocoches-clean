<div class="api-limit-container">
  <div class="api-limit-card">
    <!-- Header Section with Empathy -->
    <div class="api-limit-header">
      <div class="api-limit-icon">
        <i class="fa-solid fa-search-plus"></i>
      </div>
      <h1 class="api-limit-title"><%= t('pages.api_limit.title') %></h1>
      <p class="api-limit-subtitle"><%= t('pages.api_limit.subtitle') %></p>
    </div>

    <!-- Problem Recognition Section -->
    <div class="api-limit-recognition">
      <div class="stats-display">
        <div class="stat-item">
          <span class="stat-number"><%= current_user.total_api_calls %></span>
          <span class="stat-label"><%= t('pages.api_limit.searches_completed') %></span>
        </div>
        <div class="stat-divider">
          <i class="fa-solid fa-arrow-right"></i>
        </div>
        <div class="stat-item highlight">
          <span class="stat-number">0</span>
          <span class="stat-label"><%= t('pages.api_limit.cars_imported') %></span>
        </div>
      </div>
      
      <p class="empathy-text">
        <%= t('pages.api_limit.recognition_text') %>
      </p>
    </div>

    <!-- Solution Section -->
    <div class="api-limit-solution">
      <h2 class="solution-title">
        <i class="fa-solid fa-lightbulb"></i>
        <%= t('pages.api_limit.solution_title') %>
      </h2>
      
      <div class="benefits-grid">
        <div class="benefit-item">
          <div class="benefit-icon">
            <i class="fa-solid fa-user-tie"></i>
          </div>
          <h3><%= t('pages.api_limit.benefit_expert_title') %></h3>
          <p><%= t('pages.api_limit.benefit_expert_desc') %></p>
        </div>
        
        <div class="benefit-item">
          <div class="benefit-icon">
            <i class="fa-solid fa-clock"></i>
          </div>
          <h3><%= t('pages.api_limit.benefit_time_title') %></h3>
          <p><%= t('pages.api_limit.benefit_time_desc') %></p>
        </div>
        
        <div class="benefit-item">
          <div class="benefit-icon">
            <i class="fa-solid fa-euro-sign"></i>
          </div>
          <h3><%= t('pages.api_limit.benefit_price_title') %></h3>
          <p><%= t('pages.api_limit.benefit_price_desc') %></p>
        </div>
        
        <div class="benefit-item">
          <div class="benefit-icon">
            <i class="fa-solid fa-certificate"></i>
          </div>
          <h3><%= t('pages.api_limit.benefit_guarantee_title') %></h3>
          <p><%= t('pages.api_limit.benefit_guarantee_desc') %></p>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="api-limit-cta">
      <h2 class="cta-title"><%= t('pages.api_limit.cta_title') %></h2>
      <p class="cta-subtitle"><%= t('pages.api_limit.cta_subtitle') %></p>
      
      <div class="cta-buttons">
        <!-- WhatsApp CTA (Primary) -->
        <%= link_to whatsapp_redirect_path(source: 'api_limit', page_url: request.original_url), 
                    class: "cta-btn cta-btn-whatsapp", 
                    target: "_blank",
                    onclick: "gtag('event', 'api_limit_whatsapp_click');" do %>
          <i class="fa-brands fa-whatsapp"></i>
          <%= t('pages.api_limit.whatsapp_cta') %>
          <span class="cta-badge"><%= t('pages.api_limit.instant_response') %></span>
        <% end %>
        
        <!-- Contact Form CTA (Secondary) -->
        <%= link_to new_contact_path, class: "cta-btn cta-btn-contact", onclick: "gtag('event', 'api_limit_contact_click');" do %>
          <i class="fa-solid fa-envelope"></i>
          <%= t('pages.api_limit.contact_cta') %>
        <% end %>
      </div>
      
      <!-- Social Proof -->
      <div class="social-proof">
        <div class="testimonial">
          <div class="testimonial-stars">
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
          </div>
          <p class="testimonial-text"><%= t('pages.api_limit.testimonial_text') %></p>
          <span class="testimonial-author"><%= t('pages.api_limit.testimonial_author') %></span>
        </div>
      </div>
    </div>

  </div>
</div>

<style>
