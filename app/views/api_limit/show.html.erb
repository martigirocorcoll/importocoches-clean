  letter-spacing: 0.5px;
}

.social-proof {
  margin-top: 40px;
}

.testimonial {
  background: white;
  padding: 30px;
  border-radius: 15px;
  max-width: 500px;
  margin: 0 auto;
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
}

.testimonial-stars {
  color: #FFC107;
  margin-bottom: 15px;
  font-size: 18px;
}

.testimonial-text {
  font-style: italic;
  color: #495057;
  margin-bottom: 15px;
  line-height: 1.6;
}

.testimonial-author {
  font-weight: 600;
  color: #0066FF;
