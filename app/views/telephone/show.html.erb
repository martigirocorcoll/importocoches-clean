<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-icon">
        <i class="fa-solid fa-phone"></i>
      </div>
      <h2 class="auth-title mt-2"><%= t('pages.complete_telephone.title') %></h2>
      <p class="auth-subtitle"><%= t('pages.complete_telephone.subtitle') %></p>
    </div>

    <%= simple_form_for(current_user, url: telephone_path, method: :patch) do |f| %>
      <%= f.error_notification %>

      <div class="auth-form">
        <%= f.input :telephone,
                    required: true,
                    autofocus: true,
                    label: t('pages.complete_telephone.label'),
                    input_html: { 
                      autocomplete: "tel", 
                      class: "auth-input", 
                      placeholder: t('pages.complete_telephone.placeholder')
                    },
                    wrapper_html: { class: "auth-input-wrapper" } %>
        
        <div class="telephone-help">
          <small class="text-muted">
            <i class="fa-solid fa-info-circle"></i>
            <%= t('pages.complete_telephone.help') %>
          </small>
        </div>
      </div>

      <div class="auth-actions">
        <%= f.button :submit, t('pages.complete_telephone.submit'), class: "auth-btn auth-btn-primary" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <p class="auth-alt-text"><%= t('pages.complete_telephone.later') %></p>
      <%= link_to t('pages.complete_telephone.logout'), destroy_user_session_path, 
                  method: :delete, 
                  class: "auth-btn auth-btn-secondary" %>
    </div>
  </div>
</div>

<style>
