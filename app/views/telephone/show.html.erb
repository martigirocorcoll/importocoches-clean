  color: #0066FF;
}

.auth-title {
  font-size: 28px;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8px;
}

.auth-subtitle {
  color: #6b7280;
  font-size: 16px;
  margin: 0;
  line-height: 1.5;
}

.auth-form {
  margin-bottom: 24px;
}

.auth-input-wrapper {
