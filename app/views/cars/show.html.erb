          <% else %>
            <img class="d-block w-100" src="<%= @car.images.first %>" alt="First slide">
          <% end %>
        </div>
        <div>
          <% unless @car.images[1...].nil? %>
            <% @car.images[1...].each do |image| %>
              <div class="carousel-item">
                <img class="d-block w-100" src="<%= image %>" alt="Next slide">
              </div>
            <% end %>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
      </div>
    </div>
  </div>

  <div class="car-titles-mobile">
    <h1 style="color: black !important;"><%= @car.make %> <%= @car.model %></h1>
    <h2><%= CGI.unescapeHTML(@car.model_description).html_safe %></h2>
  </div>
  <div class="container-fluid px-4">
    <div class="row show-content-modern">
      <div class="col-lg-8 col-md-7 gallery-section">
        <div class="gallery-card">
          <div class="hero-desktop" data-controller="carousel">
            <div class="gallery-container">
              <div class="main-image-controls">
                <button class="carousel-arrow-modern carousel-prev" data-action="click->carousel#previous">
                  <i class="fa-solid fa-chevron-left"></i>
                </button>
                <div class="main-image-wrapper">
                  <img src="<%= @car.images&.first || 'https://res.cloudinary.com/dd7x7bqya/image/upload/v1685013144/placeholder-image-1_lihcz8.jpg' %>" 
                       class="main-car-image" 
                       data-carousel-target="image"
                       alt="<%= @car.make %> <%= @car.model %>">
                </div>
                <button class="carousel-arrow-modern carousel-next" data-action="click->carousel#next">
                  <i class="fa-solid fa-chevron-right"></i>
                </button>
              </div>
              
              <% unless @car.images.nil? || @car.images.empty? %>
                <div class="thumbnails-section">
                  <div class="thumbnails-scroll">
                    <% @car.images.each_with_index do |image, index| %>
                      <img src="<%= image %>"
                           class="thumbnail-modern <%= 'active' if index == 0 %>"
                           data-carousel-target="images"
                           data-action="click->carousel#select"
                           alt="Imagen <%= index + 1 %>">
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
