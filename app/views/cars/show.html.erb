<script>
document.addEventListener('DOMContentLoaded', function() {
  const floatingBtn = document.getElementById('floatingWhatsApp')
  const originalBtn = document.querySelector('.whatsapp-btn-enhanced')
  const fixedWhatsappBtn = document.querySelector('.whats-app')
  
  if (!floatingBtn || !originalBtn) return
  
  function isMobile() {
    return window.innerWidth <= 991
  }
  
  function toggleFloatingButton() {
    const originalBtnRect = originalBtn.getBoundingClientRect()
    const isOriginalVisible = originalBtnRect.top >= 0 && originalBtnRect.bottom <= window.innerHeight
    const mobile = isMobile()
    
    if (isOriginalVisible) {
      floatingBtn.classList.remove('show')
      // Only hide/show fixed button on mobile
      if (fixedWhatsappBtn && mobile) {
        fixedWhatsappBtn.style.display = 'block'
      }
    } else {
      floatingBtn.classList.add('show')
      // Only hide/show fixed button on mobile
      if (fixedWhatsappBtn && mobile) {
        fixedWhatsappBtn.style.display = 'none'
      }
    }
    
    // Ensure fixed button is always visible on desktop
    if (fixedWhatsappBtn && !mobile) {
      fixedWhatsappBtn.style.display = 'block'
    }
  }
  
  // Check on scroll
  window.addEventListener('scroll', toggleFloatingButton)
  
  // Check on resize
  window.addEventListener('resize', toggleFloatingButton)
  
  // Initial check
  toggleFloatingButton()
})
</script>
